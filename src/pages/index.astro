---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Services from '../components/sections/Services.jsx';
import { siteConfig } from '../config/site.js';
import '../styles/global.css';

---

<BaseLayout 
  title={`${siteConfig.name} - Agencia de Marketing Digital y Rebranding`}
  description={siteConfig.description}
>
  <main id="main-content">
    {/* Importamos los estilos globales */}
    <style is:global>
      /* Colores personalizados usando los colores de la empresa */
      :root {
        --color-primary: #E84855;
        --color-secondary: #E5E5E5;
        --color-dark: #333232;
        --color-success: #10b981;
        --color-error: #ef4444;
      }
      
      /* Clases de utilidad personalizadas */
      .text-primary { color: var(--color-primary); }
      .bg-primary { background-color: var(--color-primary); }
      .border-primary { border-color: var(--color-primary); }
      .hover\:bg-primary:hover { background-color: var(--color-primary); }
      .hover\:text-primary:hover { color: var(--color-primary); }
      
      .text-dark { color: var(--color-dark); }
      .bg-dark { background-color: var(--color-dark); }
      
      /* Animaciones personalizadas */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(2rem);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .animate-fadeInUp {
        animation: fadeInUp 0.6s ease-out forwards;
      }
      
      /* Scrollbar personalizado */
      ::-webkit-scrollbar {
        width: 8px;
      }
      
      ::-webkit-scrollbar-track {
        background: #f1f1f1;
      }
      
      ::-webkit-scrollbar-thumb {
        background: var(--color-primary);
        border-radius: 4px;
      }
      
      ::-webkit-scrollbar-thumb:hover {
        background: #d63441;
      }
      
      /* Suavizar el scroll */
      html {
        scroll-behavior: smooth;
      }
      
      /* Asegurar que el body ocupe toda la altura */
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
      }
    </style>
    
    {/* Header temporal con navegación básica */}
    <header class="bg-dark text-white py-4 mb-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-xl">AC</span>
            </div>
            <h1 class="text-2xl font-bold">{siteConfig.name}</h1>
          </div>
          <nav class="hidden md:flex space-x-6">
            <a href="#servicios" class="hover:text-primary transition-colors">Servicios</a>
            <a href="#contacto" class="hover:text-primary transition-colors">Contacto</a>
          </nav>
        </div>
      </div>
    </header>
    
    {/* Hero básico */}
    <section class="bg-gradient-to-br from-dark to-gray-800 text-white py-20 mb-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl md:text-6xl font-bold mb-6">
          Impulsa tu negocio con <span class="text-primary">Altura Creativa</span>
        </h2>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-4xl mx-auto">
          Transformamos empresas con estrategias digitales efectivas, rebranding innovador y soluciones integrales que generan resultados reales.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="#servicios" 
            class="bg-primary text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-red-600 transition-all transform hover:scale-105 inline-block"
          >
            Ver Nuestros Servicios
          </a>
          <a 
            href="#contacto" 
            class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-dark transition-all transform hover:scale-105 inline-block"
          >
            Contactar Ahora
          </a>
        </div>
      </div>
    </section>
    
    {/* Componente Services */}
    <Services client:load />
    
    {/* Footer temporal */}
    <footer class="bg-dark text-white py-12 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <div class="flex items-center space-x-3 mb-4">
              <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center">
                <span class="text-white font-bold">AC</span>
              </div>
              <span class="text-xl font-bold">{siteConfig.name}</span>
            </div>
            <p class="text-gray-400">
              Agencia especializada en marketing digital y rebranding para empresas que buscan resultados extraordinarios.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Servicios</h3>
            <ul class="space-y-2 text-gray-400">
              {siteConfig.services.map((service) => (
                <li>
                  <a href="#servicios" class="hover:text-primary transition-colors">
                    {service.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Contacto</h3>
            <div class="space-y-2 text-gray-400">
              <p>Email: {siteConfig.contact.email}</p>
              <p>Teléfono: {siteConfig.contact.phone}</p>
              <p>Ubicación: {siteConfig.contact.address}</p>
            </div>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; 2024 {siteConfig.name}. Todos los derechos reservados.</p>
          <p class="mt-2 text-sm">{siteConfig.developer.copyright}</p>
        </div>
      </div>
    </footer>
  </main>
</BaseLayout>